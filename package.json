  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "prettier": "prettier --check .",
    "format": "prettier --write .",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
