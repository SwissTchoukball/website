    "@types/nodemailer": "^7.0.4",
    "@vueuse/core": "^14.0.0",
    "@vueuse/nuxt": "^14.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
